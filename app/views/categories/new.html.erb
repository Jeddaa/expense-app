<div class="flex flex-col justify-center px-5 mx-0 w-5/6">
  <h1 class="py-5">Add a new Category</h1>
  <%= form_with(model: @category, url: categories_path, local: true, id: "new_category") do |form|  %>
    <div class="flex flex-col gap-2">
      <%= form.hidden_field :icon, id: 'icon-hidden-field' %>
      <div class="flex flex-col">
        <%= form.label :category_name %>
        <%= form.text_field :name %>
      </div>
      <div class="flex flex-col">
        <%= form.label :select_icon, 'Select an Icon' %>
        <%= form.select :select_icon, options_for_select(icon_options), { include_blank: 'Select icon' }, id: 'dropdown-icon', onchange: 'updateHiddenField(this.value)' %>
      </div>

      <div class="flex flex-col">
        <%= form.label :text_icon, 'Or Paste Icon Link' %>
        <%= form.text_field :text_icon, id: 'text-icon', oninput: 'updateHiddenField(this.value)' %>
      </div>
    </div>
    <%= form.submit "Add Category", class:"rounded border-2 p-2 mt-4 " %>
  <% end %>
</div>
