<div class="flex h-16 bg-blue-500 justify-between text-white sticky top-0 pl-5 m-0">
  <div class="">
      <%= link_to categories_path do %>
        <i class="fa-solid fa-backward mt-3"></i>
      <% end %>
    </div>
  <h1 class="text-4xl">ADD NEW TRANSACTIONS</h1>
  <div></div>
</div>
<div class="flex flex-col justify-center p-5 mx-0 w-5/6">
  <%= form_with(model: @category, url: categories_path, local: true, id: "new_category") do |form|  %>
    <div class="flex flex-col gap-2">
      <%= form.hidden_field :icon, id: 'icon-hidden-field' %>
      <div class="flex flex-col">
        <%= form.text_field :name, placeholder: 'Category Name' %>
      </div>
      <div class="flex flex-col">
        <%= form.select :select_icon, options_for_select(icon_options), { include_blank: 'Select icon' }, id: 'dropdown-icon', onchange: 'updateHiddenField(this.value)' %>
      </div>

      <div class="flex flex-col">
        <%= form.text_field :text_icon, placeholder: 'Or Paste Icon Link', id: 'text-icon', oninput: 'updateHiddenField(this.value)' %>
      </div>
    </div>
    <%= form.submit "Add Category", class:"rounded border-2 border-slate-400 bg-white p-2 mt-4 " %>
  <% end %>
</div>
