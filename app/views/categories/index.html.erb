<div class="flex h-16 bg-blue-500 justify-between text-white sticky top-0 pl-5 m-0">
  <%= link_to '/' do %>
    <div class="space-y-2 ml-3">
      <div class="w-8 h-0.5 bg-white"></div>
      <div class="w-8 h-0.5 bg-white"></div>
      <div class="w-8 h-0.5 bg-white"></div>
    </div>
  <% end %>

  <h1 class="text-center text-4xl"> TRANSACTIONS </h1>
  <div></div>
</div>
<div class="flex flex-col w-full p-5 mx-auto">
  <div class="flex flex-col">
    <% @categories.each do |category| %>
      <ul class="flex bg-white justify-between gap-7 p-5 mt-7">
        <li class="flex">
          <%= link_to category_path(category.id), class: "flex gap-5" do %>
            <% if category.icon.start_with?('fa') %>
              <i class="<%= category.icon %> text-5xl text-teal-600" aria-hidden="true"></i>
            <% else %>
              <img src="<%= category.icon %>" alt="<%= category.name %>">
            <% end %>
            <div class="">
              <p> <%= category.name %></p>
              <p> <%= category.created_at.strftime('%d-%b-%Y') %></p>
            </div>
          <% end %>
        </li>
        <li>
          $<%= category.items.sum(:amount) %>
        </li>
      </ul>
    <% end %>
  </div>

  <div class="flex justify-end p-10 fixed inset-x-0 bottom-0">
    <%= link_to new_category_path do %>
      <i class="fa-solid fa-circle-plus text-green-500 hover:text-blue-500 text-7xl" aria-hidden="true"></i>
    <% end %>
  </div>

</div>
