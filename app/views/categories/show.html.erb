<div class="flex h-16 bg-blue-500 justify-between text-white sticky top-0 pl-5 m-0">
  <div class="">
    <%= link_to categories_path do %>
      <i class="fa-solid fa-backward mt-3"></i>
    <% end %>
  </div>
  <h1 class="text-center text-4xl"> DETAILS </h1>
  <div></div>
</div>
<div class="flex flex-col w-full p-5 mx-auto">
  <div class="flex flex-col justify-between">
    <div class="flex bg-white justify-start gap-7 p-5 my-7">
      <% if @category.icon.start_with?('fa') %>
        <i class="<%= @category.icon %> text-5xl text-teal-600" aria-hidden="true"></i>
      <% else %>
        <img src="<%= @category.icon %>" alt="<%= @category.name %>">
      <% end %>
      <p class="mt-3"> <%= @category.name %></p>
    </div>
    <% total =0%>
    <% @category.items.each do |item| %>
      <ul class="flex bg-white justify-between gap-7 p-5 border-b-2">
        <li class="flex">
          <div class="">
            <p class="text-bold text-xl"> <%= item.name %></p>
            <p class="text-sm text-gray-500"> <%= item.created_at.strftime('%d-%b-%Y') %></p>
          </div>
        </li>
        <li>
          $<%= item.amount %>
        </li>
      </ul>
      <% total += item.amount%>
    <% end %>
    <div class="flex bg-white justify-between gap-7 p-5">
      <p class="text-bold text-xl">TOTAL PAYMENT</p>
      <p class="text-bold text-xl">$<%= total%></p>
    </div>
  </div>

  <div class="flex justify-end p-10 fixed inset-x-0 bottom-0">
    <%= link_to new_category_item_path(@category) do %>
      <i class="fa-solid fa-circle-plus text-green-500 hover:text-blue-500 text-7xl" aria-hidden="true"></i>
    <% end %>
  </div>

</div>
